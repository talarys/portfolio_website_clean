{
    "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noSvgWithoutTitle": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    }
}
